<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_gradient_background"
    tools:context=".ui.solution.SolutionActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/interview_solution_title"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="32dp"/>

            <!-- Solution 卡片1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">
                    <TextView
                        android:id="@+id/tvQuestion1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Question 1: ..."
                        android:textColor="@color/primary_blue"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:id="@+id/tvStandardAnswer1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Standard Answer: ..."
                        android:textColor="@color/text_secondary"
                        android:textSize="15sp"
                        android:layout_marginBottom="4dp"/>
                    <TextView
                        android:id="@+id/tvYourAnswer1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Answer: ..."
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"/>
                    
                    <!-- 反馈显示区域 -->
                    <TextView
                        android:id="@+id/tvFeedback1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feedback: Loading..."
                        android:textColor="@color/feedback_color"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Solution 卡片2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">
                    <TextView
                        android:id="@+id/tvQuestion2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Question 2: ..."
                        android:textColor="@color/primary_blue"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:id="@+id/tvStandardAnswer2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Standard Answer: ..."
                        android:textColor="@color/text_secondary"
                        android:textSize="15sp"
                        android:layout_marginBottom="4dp"/>
                    <TextView
                        android:id="@+id/tvYourAnswer2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Answer: ..."
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"/>
                    
                    <!-- 反馈显示区域 -->
                    <TextView
                        android:id="@+id/tvFeedback2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feedback: Loading..."
                        android:textColor="@color/feedback_color"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Solution 卡片3 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">
                    <TextView
                        android:id="@+id/tvQuestion3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Question 3: ..."
                        android:textColor="@color/primary_blue"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:id="@+id/tvStandardAnswer3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Standard Answer: ..."
                        android:textColor="@color/text_secondary"
                        android:textSize="15sp"
                        android:layout_marginBottom="4dp"/>
                    <TextView
                        android:id="@+id/tvYourAnswer3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Answer: ..."
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"/>
                    
                    <!-- 反馈显示区域 -->
                    <TextView
                        android:id="@+id/tvFeedback3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feedback: Loading..."
                        android:textColor="@color/feedback_color"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 技术反馈卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">
                    <TextView
                        android:id="@+id/tvTechFeedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tech Feedback: Loading..."
                        android:textColor="@color/feedback_color"
                        android:textSize="15sp"
                        android:visibility="gone"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 总结卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/primary_blue">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Interview Summary"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>
                    <TextView
                        android:id="@+id/tvSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading summary..."
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:visibility="gone"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 底部按钮 -->
            <LinearLayout
                android:id="@+id/bottomButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/back"
                    android:textColor="@color/text_secondary"
                    app:backgroundTint="@color/gray_200"
                    app:cornerRadius="24dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNext"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Done"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/primary_blue"
                    app:cornerRadius="24dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 