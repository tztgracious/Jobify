<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jobify_gradient_background"
    tools:context=".ui.welcome.WelcomeActivity">

    <!-- 主要内容区域 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/featuresContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Jobify品牌区域 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- "J" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="J"
                android:textColor="@color/jobify_white"
                android:textSize="56sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"/>

            <!-- Logo图标替代"o" -->
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_jobify_logo"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="4dp"/>

            <!-- "bify" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bify"
                android:textColor="@color/jobify_white"
                android:textSize="56sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"/>

        </LinearLayout>

        <!-- Resume, Interview, Success图标区域 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Resume图标 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_resume_dot"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resume"
                    android:textColor="@color/jobify_white"
                    android:textSize="16sp"/>

            </LinearLayout>

            <!-- Interview图标 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_interview_dot"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interview"
                    android:textColor="@color/jobify_white"
                    android:textSize="16sp"/>

            </LinearLayout>

            <!-- Success图标 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_success_dot"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Success"
                    android:textColor="@color/jobify_white"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 副标题 -->
        <TextView
            android:id="@+id/tvTagline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jobify_tagline"
            android:textColor="@color/jobify_white"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginBottom="48dp"
            android:fontFamily="sans-serif-light"
            android:maxLines="1"
            android:ellipsize="none"
            android:singleLine="true"/>

        <!-- Get Started按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/get_started"
            android:textSize="20sp"
            android:textColor="@color/jobify_purple_start"
            android:textStyle="bold"
            app:backgroundTint="@color/jobify_white"
            app:cornerRadius="28dp"
            app:elevation="8dp"
            android:layout_marginBottom="64dp"/>

    </LinearLayout>

    <!-- 底部特色功能区域 -->
    <LinearLayout
        android:id="@+id/featuresContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 第一行特色功能 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- AI Resume Analysis -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI"
                    android:textColor="@color/jobify_white"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resume Analysis"
                    android:textColor="@color/jobify_white_80"
                    android:textSize="14sp"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- 分隔符 -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/jobify_white_60"
                android:layout_marginHorizontal="16dp"/>

            <!-- 95% Success Rate -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="95%"
                    android:textColor="@color/jobify_white"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Success Rate"
                    android:textColor="@color/jobify_white_80"
                    android:textSize="14sp"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- 分隔符 -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/jobify_white_60"
                android:layout_marginHorizontal="16dp"/>

            <!-- 24/7 AI Support -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24/7"
                    android:textColor="@color/jobify_white"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Support"
                    android:textColor="@color/jobify_white_80"
                    android:textSize="14sp"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 第二行特色功能 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Multi-Agent Coach System -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Multi-Agent"
                    android:textColor="@color/jobify_white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coach System"
                    android:textColor="@color/jobify_white_80"
                    android:textSize="14sp"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- 分隔符 -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/jobify_white_60"
                android:layout_marginHorizontal="24dp"/>

            <!-- Anime Interview Sessions -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anime"
                    android:textColor="@color/jobify_white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interview Sessions"
                    android:textColor="@color/jobify_white_80"
                    android:textSize="14sp"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>