<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.chatwaifu.mobile">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".application.ChatWaifuApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar">
        <activity
            android:name=".ui.keywords.KeywordsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.resume.UploadResumeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.resume.ResumeIssuesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.questions.InterviewQuestionsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.questions.VideoAnswerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.answermode.AnswerModeSelectActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.welcome.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.solution.SolutionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.techinterview.TechInterviewActivity" />
        <activity
            android:name=".ui.techinterview.TechSolutionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.tips.TipsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.updatedb.UpdateDatabaseActivity"
            android:exported="false" />
        <activity
            android:name=".ChatActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>